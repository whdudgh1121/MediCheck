<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/logo"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/medicheck_logo"
                android:contentDescription="메디체크 로고" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="메디대학병원"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/buttonMenu"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/menu_bar"
                android:scaleType="fitCenter"
                android:contentDescription="메뉴 버튼"
                android:background="@null" />
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD" />

        <!-- 프로필 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnProfile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:contentDescription="Default Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_img" />

            </RelativeLayout>
        </LinearLayout>

        <!-- 정보 수정 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 성명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="성명: 김민지"
                    android:textSize="16sp" />

                <!--<Button
                    android:id="@+id/edtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경하기"
                    android:textSize="14sp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white" /> -->
            </LinearLayout>

            <!-- 연락처 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="연락처: 010.8446.2663"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnEditPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경하기"
                    android:textSize="14sp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 보호자 이름 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtGuardianName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="보호자명:"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnEditGuardianName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경하기"
                    android:textSize="14sp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 보호자 전화번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtGuardianPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="보호자 전화번호:"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnEditGuardianPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경하기"
                    android:textSize="14sp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/edtPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="비밀번호:"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnedtPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경하기"
                    android:textSize="14sp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
