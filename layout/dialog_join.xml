<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">
    <TextView
        android:id="@+id/tvNa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보"
        android:textSize="20dp"
        android:layout_marginTop="8dp" />
    <!-- 이름 입력 필드 -->
    <EditText
        android:id="@+id/edtNa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:inputType="textPersonName"
        android:textSize="20dp"
        />
    <!-- 생년월일 입력 필드 -->
    <EditText
        android:id="@+id/edtBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="생년월일 (YYYY-MM-DD)"
        android:inputType="date"
        android:textSize="20dp"
        />
    <!-- 전화번호 입력 필드 -->
    <EditText
        android:id="@+id/edtPho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호"
        android:inputType="phone"
        android:textSize="20dp"
        />

    <!-- 성별 선택 -->
    <TextView
        android:id="@+id/tvSe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="20dp"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/rgGe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남성" />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성" />
    </RadioGroup>
    <TextView
        android:id="@+id/tvIdPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 및 비밀번호 설정"
        android:textSize="20dp"
        android:layout_marginTop="8dp" />
    <EditText
        android:id="@+id/edtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/edtPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        android:textSize="20dp"
        />

    <!-- 보호자 정보 표시 체크박스 -->
    <CheckBox
        android:id="@+id/cbGuard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호자 정보 입력"
        android:layout_marginTop="8dp"/>

    <!-- 보호자명 입력 필드 (기본적으로 숨김) -->
    <EditText
        android:id="@+id/edtGuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보호자 이름"
        android:visibility="gone"
        android:inputType="textPersonName"
        android:textSize="20dp"
        />

    <!-- 보호자 연락처 입력 필드 (기본적으로 숨김) -->
    <EditText
        android:id="@+id/edtGuPho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보호자 연락처"
        android:visibility="gone"
        android:inputType="phone"
        android:textSize="20dp"
        />
</LinearLayout>